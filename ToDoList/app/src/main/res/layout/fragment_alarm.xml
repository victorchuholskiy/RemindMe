<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmFragment"
    android:paddingTop="@dimen/activity_setting_vertical_margin"
    android:paddingBottom="@dimen/activity_setting_vertical_margin"
    android:background="#ce000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorWhiteBackground"
            android:textStyle="bold"
            android:id="@+id/textViewTaskName"
            android:gravity="center"/>

        <com.gmail.victorchuholskiy.todolist.view.SlideToUnlock
            android:id="@+id/slideToUnlock"
            android:layout_width="220dp"
            android:layout_height="50dp"
            app:slideToUnlockBackgroundColor="@color/colorGreyBackground"
            app:slideToUnlockText="Остановить"
            app:slideToUnlockTextColor="@color/colorBlackText"
            app:sliderColor="@color/colorButtonRed"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorWhiteBackground"
            android:id="@+id/textViewTaskTime"
            android:paddingBottom="5dp"
            android:gravity="center"/>

    <!--    <at.markushi.ui.CircleButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_action_tick"
            app:cb_color="@color/colorAccent"
            android:id="@+id/buttonStopSignal"
            android:layout_gravity="center_horizontal|bottom"/>-->

    </LinearLayout>

</FrameLayout>
