<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_done_white"
            app:cb_color="@color/colorButtonGreen"
            android:id="@+id/buttonOk"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_clear_white"
            app:cb_color="@color/colorButtonRed"
            android:id="@+id/buttonCancel"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_keyboard_voice_white"
            app:cb_color="@color/colorButtonGrey"
            android:id="@+id/buttonSpeak"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_add_alarm_white"
            app:cb_color="@color/colorButtonYellow"
            android:id="@+id/buttonAddAlarm"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_query_builder_white"
            app:cb_color="@color/colorButtonLightBlue"
            android:id="@+id/buttonSetTime"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_library_music_white"
            app:cb_color="@color/colorButtonOrange"
            android:id="@+id/buttonSetTone"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_vibration_white"
            app:cb_color="@color/colorButtonBlue"
            android:id="@+id/buttonAddVibration"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_event_note_white"
            app:cb_color="@color/colorButtonPink"
            android:id="@+id/buttonSendToCalendar"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>