<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_arrow_back_white"
            app:cb_color="@color/colorButtonGreen"
            android:id="@+id/buttonBack"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_create_white"
            app:cb_color="@color/colorButtonYellow"
            android:id="@+id/buttonEdit"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_delete_white"
            app:cb_color="@color/colorButtonRed"
            android:id="@+id/buttonDelete"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_content_copy_white"
            app:cb_color="@color/colorButtonBlue"
            android:id="@+id/buttonCopyToBuffer"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

        <at.markushi.ui.CircleButton
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:src="@drawable/ic_event_white"
            app:cb_color="@color/colorButtonOrange"
            android:id="@+id/buttonOpenEventInCalendar"
            android:layout_margin="@dimen/circle_button_margin"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>